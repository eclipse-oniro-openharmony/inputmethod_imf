import("//base/inputmethod/imf/inputmethod.gni")
import("//build/ohos.gni")

config("imf_config") {
  visibility = [ ":*" ]
  include_dirs = [
    "include",
    "${inputmethod_path}/common",
    "${inputmethod_path}/frameworks/js/napi/inputmethodability",
  ]
}

config("imf_public_config") {
  visibility = [ "./*" ]
  include_dirs = [
    "include",
    "${inputmethod_path}/common",
  ]
  ldflags = [ "-Wl,--exclude-libs=ALL" ]
  cflags = [
    "-fdata-sections",
    "-ffunction-sections",
    "-fvisibility=hidden",
    "-Os",
  ]
}

ohos_shared_library("inputmethod") {
  sources = [
    "async_call.cpp",
    "input_method_module.cpp",
    "js_get_input_method_controller.cpp",
    "js_get_input_method_setting.cpp",
    "js_get_input_method_textchange_listener.cpp",
    "js_input_method.cpp",
    "js_utils.cpp",
  ]

  configs = [ ":imf_config" ]

  deps = [
    "${inputmethod_path}/frameworks/js/napi/common:inputmethod_js_common",
    "${inputmethod_path}/interfaces/inner_api/inputmethod_controller:inputmethod_client",
  ]

  external_deps = [
    "ability_runtime:abilitykit_native",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "hilog:libhilog",
    "input:libmmi-client",
  ]

  public_configs = [ ":imf_public_config" ]

  relative_install_dir = "module"
  subsystem_name = "inputmethod"
  part_name = "imf"
}
